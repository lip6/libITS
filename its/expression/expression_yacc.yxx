/*......................................Declarations Bison ................................... */
%union { 
  int  j; 	
  char *s;
  Expression *e;
  struct Terme c;
}
/*...........................................token............................................ */

%token <s> IDENT  
%token <j> ENTIER
%token ESPACE EMPTY SIZ EGAL DIFF ESUP EINF  ET  OU  TETE QUE COMMENTAIRE

/*...........................................type............................................. */
%type <c> terme 
%type <e> expression exp_elementaire

%left '+'  '-'  '*'  '/'  '%' '.'
