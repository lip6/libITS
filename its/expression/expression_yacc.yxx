%%
/*.....................................rule grammatical ......................................... */

liste : expression';' {
                      expression->Container.push_back( *$1);
                      delete $1;
                      }
        liste
		|
      COMMENTAIRE commentaire  liste
		|
		  erreur {yyerror(" (incorrect expression) ")<<endl; return 1;}
    |
		  ESPACE  liste
		|

;
commentaire: IDENT {} commentaire
            |
             ESPACE
;
expression :
              expression  ET   expression
              {
			          $$=new Expression( *$1 &&  *$3 );
			          delete $1;
			          delete $3;
              }
              |
              expression  OU   expression
              {
			          $$=new Expression( *$1 ||  *$3 );
			          delete $1; 
			          delete $3;
              }
              |
              '('  expression  ')'
              {
            		$$=new Expression(  *$2 );
			          delete $2;
              }
              |
              '!' expression 
              {
			          $$=new Expression(!  *$2 );
			          delete $2;
              }
	            |
	            exp_elementaire
	            {
			          $$=new Expression( *$1);
			          delete $1;
	            }
