  extern int expressionlineno;
  extern ostream& yyerror(const char* s){
	  if (s) {
      string nom=string(" (incorrect expression) ");
      string err=string(s);
		  if(nom != err)
          cout<<"error line "<<expressionlineno<<" : ";
      cout<<s;
      err.erase();
	  }
	  else {
		  cout<<"parsing error"<<endl;
	  }
