 q3 -> CS { guard x == 0; },
 q3 -> q4 { guard x != 0; effect b[0] = 0, j = 0; },
 q4 -> q4 { guard j<3 && b[j]==0 ; effect j = j+1; },
 q4 -> q5 { guard j==3; },
 q5 -> CS { guard y == 0;  },
 q5 -> NCS { guard  y == 255; },
 CS -> e1 { effect y = 255; },
 e1 -> NCS { effect b[0] = 0; };
}
